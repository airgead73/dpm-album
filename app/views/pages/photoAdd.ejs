<%- include ('../partials/head') %>
  <%- include ('../partials/header') %>

    <section class="container-fluid row" id="formContainer">
      <h1 class="h3 col-md-2 text-end">Add Photo <small class="h6"><%= work_title %></small></h1>

      <form action="/api/works" class="card col-md-8" id="postWork" method="POST">
        <div class="card-body row">
          <div class="mb-3 col-md-4">
            <label for="work" class="form-label">work</label>
            <input class="form-control"  list="workOptions" id="work" name="work" value="<%=  work_title %>">
            <datalist id="workOptions">
              <% works.forEach(item => { %>
                <option value="<%= item.title %>">
             <% }) %>
            </datalist>
          </div>          
          <div class="mb-3 col-md-8">
            <label for="title" class="form-label">title</label>
            <input class="form-control" type="text" id="title" name="title">
          </div>
          <div class="mb-3 col-md-6">
            <label for="material" class="form-label">material</label>
            <input class="form-control" list="materialOptions" id="material" name="material"
              placeholder="Type to search..." required>
            <datalist id="materialOptions">
              <option value="clay">
              <option value="bronze">
              <option value="marble">
              <option value="oil on canvas">
              <option value="pencil">
            </datalist>
          </div>
          <div class="mb-3 col-md-6">
            <label for="category" class="form-label">category</label>
            <input class="form-control" list="categoryOptions" id="category" name="category"
              placeholder="Type to search..." required>
            <datalist id="categoryOptions">
              <option value="abstract">
              <option value="landscape">
              <option value="portrait">
              <option value="wildlife">
            </datalist>
          </div>
        </div>
        <div class="card-footer">
          <div class="mb-3">
            <button type="submit" class="btn btn-outline-secondary btn-sm">add</button>
            <button type="reset" class="btn btn-outline-secondary btn-sm">reset</button>
          </div>
        </div>
      </form>

      <aside class="col-md-2" data-preview="container">
        <figcaption data-preview="caption">
          <h2 class="h6 text-center">The railroad men</h2>
        </figcaption>
        <figure>
          <img src="https://res.cloudinary.com/dpm/image/upload/v1649233688/portfolio/qccf05a7hdcxmmbgdenr.jpg"
            alt="selected photo" data-preview="photo">

        </figure>
      </aside>
    </section>




    <%- include('../partials/foot') %>