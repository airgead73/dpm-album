      <h2 class="h4">photos <small><a href="/photos/add?work=<%= work.id %>" title="add photo for <%= work.title %>"><i class="bi bi-plus-square"></i></a></small></h2>

      <% if(photos.length) { %>
        <p>photos</p>
      <% } else { %>
        <p>No photos for <strong><%= work.title %></strong></p>
      <% } %>
    </article>
  </section>


    


