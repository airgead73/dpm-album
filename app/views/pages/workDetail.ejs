  <section class="row">
    <aside class="col-md-4">
      <h1 class="h2"><%= work.title %></h1>

      <p><%= work.mode %> <i class="bi bi-dot"></i> <%= work.material %> <i class="bi bi-dot"></i> <%= work.category %></p>
